@model User

<form asp-action="Update" asp-controller="User" method="post">
    <input type="hidden" asp-for=Id>
    <h2 class="mb-4">User Update</h2>

    <div class="mb-3">
        <label for="inputUserName" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputUserName" asp-for="Name" required>
    </div>
    <div class="mb-3">
        <label for="inputSurname" class="form-label">Surname</label>
        <input type="text" class="form-control" id="inputSurname" asp-for="Surname" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Update</button>
</form>
